{
  debug
  http_port  8080
  https_port 8443
}

http://www.example.com {
  redir https://www.example.com{uri}
}

https://www.example.com {
  @static path /favicon.ico /images/* /fonts/*

  handle @static {
    root * /home/caddy/srv/static
    file_server
  }

  handle /build/* {
    root * /home/caddy/srv
    file_server
  }

  handle {
    reverse_proxy localhost:3000
  }
}
